<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_top_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingBottom="40dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:text="@string/setting_slide_show"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white_aa"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_display_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_01"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@mipmap/ic_exchange"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/black_66"
                    app:layout_constraintStart_toEndOf="@+id/img_01"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/setting_display_time"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/white_ee"
                    app:layout_constraintTop_toBottomOf="@+id/img_01"
                    app:layout_constraintStart_toEndOf="@+id/img_01"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_display_effect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_02"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@mipmap/ic_exchange"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/black_66"
                    app:layout_constraintStart_toEndOf="@+id/img_02"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/setting_display_effect"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/white_ee"
                    app:layout_constraintTop_toBottomOf="@+id/img_02"
                    app:layout_constraintStart_toEndOf="@+id/img_02"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_transition_effect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_03"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@mipmap/ic_exchange"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/black_66"
                    app:layout_constraintStart_toEndOf="@+id/img_03"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/setting_transition_effect"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/white_ee"
                    app:layout_constraintTop_toBottomOf="@+id/img_03"
                    app:layout_constraintStart_toEndOf="@+id/img_03"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_04"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@mipmap/ic_exchange"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/black_66"
                    app:layout_constraintStart_toEndOf="@+id/img_04"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/setting_photo_order"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/white_ee"
                    app:layout_constraintTop_toBottomOf="@+id/img_04"
                    app:layout_constraintStart_toEndOf="@+id/img_04"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_05"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@mipmap/ic_exchange"/>
                <ImageView
                    android:id="@+id/img_music"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@mipmap/ic_exchange"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/black_66"
                    app:layout_constraintStart_toEndOf="@+id/img_05"
                    app:layout_constraintEnd_toStartOf="@+id/img_music"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/setting_music"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/white_ee"
                    app:layout_constraintTop_toBottomOf="@+id/img_05"
                    app:layout_constraintStart_toEndOf="@+id/img_05"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:text="@string/setting_auto"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white_aa"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_schedules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_06"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@mipmap/ic_exchange"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/black_66"
                    app:layout_constraintStart_toEndOf="@+id/img_06"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/setting_auto_schedules"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/white_ee"
                    app:layout_constraintTop_toBottomOf="@+id/img_06"
                    app:layout_constraintStart_toEndOf="@+id/img_06"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_07"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@mipmap/ic_exchange"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/black_66"
                    app:layout_constraintStart_toEndOf="@+id/img_07"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/setting_auto_timer"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/white_ee"
                    app:layout_constraintTop_toBottomOf="@+id/img_07"
                    app:layout_constraintStart_toEndOf="@+id/img_07"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:text="@string/setting_others"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white_aa"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_sync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_08"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@mipmap/ic_exchange"/>

                <TextView
                    android:id="@+id/tv_syc"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/black_66"
                    app:layout_constraintStart_toEndOf="@+id/img_08"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/setting_syn"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/black_99"
                    app:layout_constraintStart_toEndOf="@+id/img_08"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_syc"
                    android:text="@string/setting_syn_remind"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/white_ee"
                    app:layout_constraintTop_toBottomOf="@+id/img_08"
                    app:layout_constraintStart_toEndOf="@+id/img_08"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_09"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@mipmap/ic_exchange"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/black_66"
                    app:layout_constraintStart_toEndOf="@+id/img_09"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/setting_screen"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/white_ee"
                    app:layout_constraintTop_toBottomOf="@+id/img_09"
                    app:layout_constraintStart_toEndOf="@+id/img_09"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="60dp"
                android:gravity="center">
                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:background="@color/white_ee"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:gravity="center"
                    android:text="v 1.0.0"/>
                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:background="@color/white_ee"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
